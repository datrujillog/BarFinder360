generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id              Int               @id @default(autoincrement())
  name            String
  lastName        String
  code            String
  email           String            //@unique
  password        String
  phone           String
  NameBusiness    String
  BusinessType    String
  state           stateBusiness         @default(ASSET)
  User            User[]
  Role            Role[]
}


model User {
  id              Int               @id @default(autoincrement())
  name            String
  lastName        String
  usuario         String?   
  DocumentType    DocumentType?     @default(CEDULA_CIUDADANIA)
  TypePerson      TypePerson?       @default(NATURAL)
  email           String            //@unique
  password        String
  CountryCode     String?
  phone           String
  state           EstadoUser         @default(ASSET)
  Business        Business           @relation(fields: [BusinessId], references: [id])
  BusinessId      Int                         
  Role            Role               @relation(fields: [RoleId ], references: [id])
  RoleId          Int                
  
}

model Role {
  id              Int               @id @default(autoincrement())
  name            String
  User            User[]
  Business        Business?          @relation(fields: [BusinessId], references: [id])
  BusinessId      Int?               
}


// ENUM


enum EstadoUser {
  ASSET
  IDLE
}

enum stateBusiness {
  ASSET
  IDLE
}

enum DocumentType {
  CEDULA_CIUDADANIA
  NIT
  PASAPORTE
  REGISTRO_CIVIL
  TARJETA_EXTRAJERA
  CEDULA_EXTRANJERA
  DOCUMENTO_IDENTIDAD_EXTRANJERO
  PERMISO_ESPECIAL_PERMANENCIA
  
}

enum TypePerson {
  NATURAL
  JURIDICA
}


